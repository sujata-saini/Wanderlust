<body>
    <div class="hero-section">
      <h1 id="typing-text" class="typewriter"></h1>
    </div>
  
    <script>
      const text = "We are your travelling partner. Travel with us.";
      let i = 0;
      const target = document.getElementById("typing-text");
  
      function typeWriter() {
        if (i < text.length) {
          target.textContent += text.charAt(i);
          i++;
          setTimeout(typeWriter, 100); // speed of typing
        } else {
          setTimeout(() => {
            target.textContent = "";
            i = 0;
            typeWriter();
          }, 2000); // pause after typing
        }
      }
  
      typeWriter();
    </script>
  </body>
  